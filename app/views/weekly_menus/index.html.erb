<p id="notice"><%= notice %></p>

<h1>Weekly Menus</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>Meals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weekly_menus.each do |weekly_menu| %>
      <tr>
        <td><%= weekly_menu.start_date %></td>
        <td><%= weekly_menu.meals.name %></td>
        <td><%= link_to 'Show', weekly_menu %></td>
        <td><%= link_to 'Edit', edit_weekly_menu_path(weekly_menu) %></td>
        <td><%= link_to 'Destroy', weekly_menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weekly Menu', new_weekly_menu_path, class: 'btn btn-primary' %>