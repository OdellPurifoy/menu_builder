<p id="notice"><%= notice %></p>

<h1 class="display-4 text-center mb-4">Weekly Menus</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Start date</th>
      <th scope="col">Meals</th>
      <th scope="col">Number of Meals</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @weekly_menus.each do |weekly_menu| %>
      <tr>
        <td><%= weekly_menu.start_date %></td>
        <td><%= weekly_menu.meals.map(&:name).join(', ') %></td>
        <td><%= weekly_menu.meals.count %></td>
        <td><%= link_to 'Show', weekly_menu %></td>
        <td><%= link_to 'Edit', edit_weekly_menu_path(weekly_menu) %></td>
        <td><%= link_to 'Destroy', weekly_menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Weekly Menu', new_weekly_menu_path, class: 'btn btn-primary' %>
